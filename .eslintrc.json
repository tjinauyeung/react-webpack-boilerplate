{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "arrow-parens": ["error", "as needed"],
    "comma-dangle": ["error", "never"],
    "quotes": ["error", "single"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "space-before-function-paren": ["error", "never"],
    "eol-last": ["error", "always"]
  }
}
